agent GUIAgent {
	uses Logging, DefaultContextInteractions

	on Initialize {
		// Event trigger before the agent begin to live or to be used.
		// You should put all the initialization statements in this block of code.
		info("The agent was started.")
		var gtsp = new Gtsp(new File('C:/Users/yaben/Documents/UTBM/GI05/IA54/Projet/Test GTSP/3burma14.txt'))
		for (elt : gtsp.node_dist) {
			info(elt.toString)
		}
		info(gtsp.dimension)
		info(gtsp.groupDimension)
		info(gtsp.group_list.toString)
		
	}

	on Destroy {
		// Event trigger when the agent is destroyed from the system.
		// You should put all the resource releasing statements in this block of code.
		info("The agent was stopped.")
	}

	on OptimizationFinished {
		new GuiRepaint(occurrence.pheromones, occurrence.bestPath, occurrence.bestPathLength).emit
	}

}
